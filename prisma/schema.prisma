generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  // User fileds
  email     String   @unique
  username  String   @unique
  password  String
  profile   Profile  @relation(fields: [profileId], references: [id])
  profileId String   @unique @db.ObjectId
}

model Profile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  // Profile fileds
  fullName  String
  gander    Gander   @default(male)
  picture   String?
  mobile    String
  country   String
  // Relation
  user      User?
}

model File {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now()) @updatedAt
  // Relations
  parentDir       Directory @relation(fields: [parentDirId], references: [id])
  parentDirId     String    @db.ObjectId
  // File fileds
  fileName        String
  baseSlug        String?
  owner           String
  fileSizeKB      Int?
  renamedAt       DateTime?
  copiedAt        DateTime?
  editedAt        DateTime?
  changedAccessAt DateTime?
}

model Directory {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  // Relations
  file            File[]
  parentDir       Directory?  @relation("nestedDirChain", fields: [parentDirId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  parentDirId     String?     @db.ObjectId
  childDir        Directory[] @relation("nestedDirChain")
  // Directory fields
  directoryName   String
  baseSlug        String?     @unique
  owner           String
  directorySizeKB Int?
  renamedAt       DateTime?
  copiedAt        DateTime?
  editedAt        DateTime?
  changedAccessAt DateTime?

  // Created and updated at
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum Gander {
  male
  female
  others
}
